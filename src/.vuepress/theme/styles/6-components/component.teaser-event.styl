.teaser-event {
  text-decoration: none;
  color: inherit;
  margin-bottom: 1rem;
  display: inline-block;
  background-color: #eee;
  border-radius: 0.5rem;
  width:100%;
  display:flex;
  flex-direction: column;
}

.teaser-event__date, .teaser-event__button {
  display: inline-block;
  font-weight: bold;
  padding: 0.05em 0.5em;
  border-radius: 1em;
}

.teaser-event__button-container {
  text-align: right;
  margin-bottom: 0;
}

.teaser-event__button {
  display: inline-block;
  font-weight: bold;
  padding: 0.05em 0.5em;
  border-radius: 0.5rem;
  display: inline;
  margin-left: 0.1rem;
}

.teaser-event__date {
  background-color: lightblue;
}

.teaser-event--is-history .teaser-event__date {
  background-color: #ddd;
}

.teaser-event--is-atm .teaser-event__date {
  background-color: lightgreen;
}

.teaser-event__deadline {
  font-weight: bold;
}

.teaser-event__deadline.teaser-event__deadline--is-soon {
  padding: 0rem 0.5rem;
  border-radius: 0.5rem;
  background-color: #F9BEBE;
}

.teaser-event__button {
  color: inherit;
  text-decoration: none;
  background-color: #ccc;
}

.teaser-event__info {
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  margin-left: 1rem;
}

.teaser-event__card {
  background-color: #ddd;
  padding: 1rem;
  border-radius: 0.5rem;
  display: block;
  flex-grow:1;


  > p:last-child {
    margin-bottom: 0;
  }

  .teaser-event__more {
    display: inline-block;
    float: right;
  }
}

.teaser__heading {
  margin-top: 0;
}
