
.split-container__item
  padding-top:1rem;
  padding-bottom:1rem;
  
.split-container__item:nth-child(1)
  background-color: #0b559f;
  color: white;
  
.split-container__item:nth-child(2)
  background-color: #eee;
  
@media (min-width: 1200px)
  .split-container
    display:flex;

  .split-container__item
    flex-grow:1;
    display:flex;
    align-items: center;

    h1
      margin-top:0;
      margin-bottom:0;
      text-align:right;

    h2
      margin-top:0;

    .room-status
      margin-bottom:0;

  .split-container__item:nth-child(1)
    .container
      margin-right:0;
      
  .split-container__item:nth-child(2)
    .container
      margin-left:0;
