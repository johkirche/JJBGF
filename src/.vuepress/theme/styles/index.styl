/** Font **/
@import url("/fonts/inter/inter.css");

/** ITCSS 
 * inspired by: https://www.hongkiat.com/blog/inverted-triangle-css-web-development/ */

/** Settings
  * Preprocessor variables and methods (no actual CSS output) */
@import '1-settings/color';

/** Tools 
  * Mixins and functions (no actual CSS output) */

/** Generic
  * CSS resets which might include Eric Meyerâ€™s reset, Normalize.css, or your own batch of code */
@import '3-generic/generic.normalize'
@import '3-generic/generic.box-sizing'

/** Elements 
  * Single HTML element selectors without classes */
@import '4-elements/element.layout';

/** Objects
  * Classes for page structure typically following the OOCSS methodology */
@import '5-objects/object.link';
@import '5-objects/object.text';
@import '5-objects/object.width';

/** Components 
  * Aesthetic classes for styling any & all page elements (often combined with the structure of object classes) */
@import '6-components/component.header';
@import '6-components/component.page-header';
@import '6-components/component.page-footer';
@import '6-components/component.event-teaser';
@import '6-components/component.quote';
@import '6-components/component.button';

/** Utilities
  * The most specific styles for overriding anything else in the triangle */
@import '7-utilities/util.visually-hidden';
@import '7-utilities/util.clickable';



.highlight,
mark 
  background-color: #111111;
  color: #fff;
  font-weight: bold;
  border-radius: 0.25rem;
  padding: 0.05em 0.5em;
  margin-right: 0.25rem;
p 
  margin: 0;
.text h1 
  // text-align: center;
  // font-family: serif;
  font-size: 2rem;
  @media (min-width: 768px) 
    font-size: 2.5rem;
  .header-anchor 
    display: none;
h4 
  --flow-space: .5rem;
  margin: 0;
  margin-bottom: .5rem;
  font-size: 1.25em;


.logo 
  margin-top: 4rem;
  margin-bottom: 2rem;
  width: 100%;

.media 
  padding-left: 2rem;
  vertical-align: top;
  width: calc(100% - 2rem);
  margin-bottom: 2rem;
